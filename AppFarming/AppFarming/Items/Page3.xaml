<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFarming.Items.Page3"
           Title="Pagos FarminApp">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical"
                     Spacing="0">
                <StackLayout
                Orientation="Horizontal"
                Padding="0,40,0,20"
                BackgroundColor="#89C332">
                    <Label
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand"
                            Text="Saldo Disponible"
                            VerticalTextAlignment="Start"
                            HorizontalTextAlignment="Center"
                            FontSize="Large"
                            TextColor="White"/>
                </StackLayout>
                <StackLayout
                
                Orientation="Horizontal"
                Padding="0,40,0,20"
                BackgroundColor="#89C332">

                    <Label
                            HorizontalOptions="CenterAndExpand"
                            Text="$ 0.00"
                            VerticalTextAlignment="Start"
                            HorizontalTextAlignment="Center"
                            FontSize="50"
                            TextColor="White"/>
                </StackLayout>
                <StackLayout
                
                Orientation="Horizontal"
                Padding="0,40,0,10"
                BackgroundColor="#DAE8DA">

                    <Label
                            HorizontalOptions="CenterAndExpand"
                            Text="Deposita Efectivo a Tu Cuenta de FarmingApp. ¡ No Necesita Tarjeta de Credito o Cuenta de Banco."
